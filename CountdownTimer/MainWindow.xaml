<Window x:Class="CountdownTimerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Countdown Timer Pro"
        Height="650" Width="480"
        FontFamily="Segoe UI Variable Text" FontSize="14"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        BorderThickness="1">

    <Window.Background>
        <RadialGradientBrush>
            <GradientStop Color="#0D1421" Offset="0"/>
            <GradientStop Color="#1A1A2E" Offset="0.7"/>
            <GradientStop Color="#16213E" Offset="1"/>
        </RadialGradientBrush>
    </Window.Background>

    <Window.BorderBrush>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF6B6B" Offset="0"/>
            <GradientStop Color="#4ECDC4" Offset="0.5"/>
            <GradientStop Color="#45B7D1" Offset="1"/>
        </LinearGradientBrush>
    </Window.BorderBrush>

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StartButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#4ECDC4" Offset="0"/>
                        <GradientStop Color="#44A08D" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ResetButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FF6B6B" Offset="0"/>
                        <GradientStop Color="#EE5A52" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#0F0F23"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#4ECDC4"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                  Margin="{TemplateBinding Padding}"
                                  HorizontalScrollBarVisibility="Hidden"
                                  VerticalScrollBarVisibility="Hidden" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CircularProgressBar" TargetType="ProgressBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid>
                            <Ellipse Stroke="#2A2A2A" 
                                     StrokeThickness="8" 
                                     Fill="Transparent"/>
                            <Ellipse x:Name="ProgressEllipse" 
                                     StrokeThickness="8" 
                                     Fill="Transparent"
                                     StrokeDashArray="251.2"
                                     StrokeDashOffset="251.2"
                                     RenderTransformOrigin="0.5,0.5">
                                <Ellipse.Stroke>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#FF6B6B" Offset="0"/>
                                        <GradientStop Color="#4ECDC4" Offset="0.5"/>
                                        <GradientStop Color="#45B7D1" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Stroke>
                                <Ellipse.RenderTransform>
                                    <RotateTransform Angle="-90"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Value" Value="0">
                                <Setter TargetName="ProgressEllipse" Property="StrokeDashOffset" Value="251.2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Title Bar -->
        <Border DockPanel.Dock="Top" 
                Height="40" 
                Background="#0D1421"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <TextBlock Text="⏱️ Countdown Timer Pro" 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Left"
                           Margin="20,0"/>
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center">
                    <Button x:Name="HelpButton" 
                            Content="?" 
                            Width="30" Height="30" 
                            Background="Transparent" 
                            Foreground="#4ECDC4"
                            BorderThickness="1"
                            BorderBrush="#4ECDC4"
                            FontWeight="Bold"
                            Click="OpenInfo_Click"
                            Margin="0,0,10,0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Content="✕" 
                            Width="30" Height="30" 
                            Background="Transparent" 
                            Foreground="#FF6B6B"
                            BorderThickness="0"
                            FontSize="16"
                            Click="CloseButton_Click"
                            Margin="0,0,10,0"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Margin="30,25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Input Section -->
            <Border Grid.Row="0"
                    Background="#1A1A2E" 
                    CornerRadius="15" 
                    Padding="25" 
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="⏰ Zeit einstellen" 
                               Foreground="#E0E0E0" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,15"
                               HorizontalAlignment="Center"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="Minuten" 
                                       Foreground="#B0B0B0" 
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="MinutesBox" 
                                     Width="80" Height="40" 
                                     Text="1"/>
                        </StackPanel>

                        <TextBlock Grid.Column="1" 
                                   Text=":" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="#4ECDC4"
                                   VerticalAlignment="Center"
                                   Margin="15,0"/>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="Sekunden" 
                                       Foreground="#B0B0B0" 
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="SecondsBox" 
                                     Width="80" Height="40" 
                                     Text="0" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Control Buttons -->
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,25">
                <Button x:Name="StartButton" 
                        Content="▶️ Start" 
                        Click="StartButton_Click"
                        Height="45" 
                        Width="120"
                        FontSize="15"
                        Style="{StaticResource StartButton}"
                        Margin="0,0,15,0"/>
                <Button x:Name="ResetButton" 
                        Content="🔄 Reset" 
                        Click="ResetButton_Click"
                        Height="45" 
                        Width="120"
                        FontSize="15"
                        Style="{StaticResource ResetButton}"/>
            </StackPanel>

            <!-- Countdown Display -->
            <Border Grid.Row="2"
                    Background="#1A1A2E" 
                    CornerRadius="15" 
                    Padding="20"
                    VerticalAlignment="Center">
                <Grid>
                    <ProgressBar x:Name="CountdownBar" 
                                 Width="120" Height="120"
                                 Maximum="100" 
                                 Style="{StaticResource CircularProgressBar}"/>
                    <StackPanel HorizontalAlignment="Center" 
                                VerticalAlignment="Center">
                        <TextBlock x:Name="CountdownLabel" 
                                   Text="00:00" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   FontFamily="Consolas"
                                   Foreground="#E0E0E0"
                                   TextAlignment="Center"/>
                        <TextBlock Text="verbleibend" 
                                   FontSize="12" 
                                   Foreground="#B0B0B0"
                                   TextAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Status Indicator -->
            <Border Grid.Row="3"
                    Background="#1A1A2E" 
                    CornerRadius="10" 
                    Padding="15"
                    Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <Ellipse x:Name="StatusIndicator"
                             Width="12" Height="12" 
                             Fill="#4ECDC4"
                             Margin="0,0,10,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                   From="1" To="0.3" 
                                                                   Duration="0:0:1"
                                                                   AutoReverse="True"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock x:Name="StatusLabel" 
                               Text="Bereit zum Start" 
                               Foreground="#B0B0B0" 
                               FontSize="13"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>